# Deep Claw Analytics Backend Configuration

# PostgreSQL Database
DATABASE_URL=postgresql://deepclaw:password@localhost:5432/deepclaw_analytics

# Server
PORT=3000
NODE_ENV=development

# JWT Secret (generate random string for production)
JWT_SECRET=your-secret-key-here-change-in-production

# Nostr Relays (comma-separated)
NOSTR_RELAYS=wss://relay.damus.io,wss://nos.lol,wss://relay.nostr.band,wss://nostr.wine

# Webhook Defaults
DEFAULT_WEBHOOK_TIMEOUT_MS=5000
WEBHOOK_RETRY_COUNT=3

# Rate Limiting
FREE_TIER_RATE_LIMIT=100
PREMIUM_TIER_RATE_LIMIT=1000

# Lightning (for future premium payments)
LIGHTNING_ENABLED=false
